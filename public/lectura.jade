				.paginacion
					span.icon-prev
					| 1 de 4
					span.icon-next
			aside
				.div-historia-informacion2.hidden-xs
					img(src!="img/<%= img %>")
					.estadisticas
						.lecturas
							| Lecturas
						.ortografia
							| Ortografia
						.ranking
							| Ranking
					.datos
						a(href='#') #<%= genero %>
						div
							button.glyphicon.glyphicon-thumbs-up.like 
								p<%= likes %>
							button.glyphicon.glyphicon-thumbs-down.dislike
								p<%= dislikes %>
					
				.div-agregar
					form
						#formatting-container
							.textarea-agregar#textarea-agregar
						input(type="submit", value="Guardar y publicar")
				button.agregar-fragmento Agregar Fragmento


		script#topbar-template(type='text/template')
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/new')
					span.icon-logo

			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					li
						form.navbar-form.navbar-left(role='search')
							.form-group.has-feedback
								input.form-control.buscar(type='text')
								span.icon-busqueda.form-control-feedback
					li
						a.nueva-historia(href='/nueva')
							span.icon-pluma
							| Nueva Historia
					li
						a(href='#')
							img.img-perfil(src='img/avatar.jpg')
							| <%= nick %>
					li.dropdown
						a.dropdown-toggle.configuraciones(href='#', data-toggle='dropdown')
							span.icon-configuraciones
							span.visible-sm Configuracion
							span.icon-arrow-down
						ul.dropdown-menu(role='menu')
							//-li
								a(href='#')
									span.icon-stats
									| Dashboard
							//-li
								a(href='#')
									span.icon-editarperfil
									| Editar Perfil
							//-li
								a(href='#')
									span.icon-filtros
									| Filtros
							li
								a(href='/logout')
									span.icon-logout
									| Logout
							li.divider
							li
								a(href='#')
									span.icon-ayuda
									| Ayuda

